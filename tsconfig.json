{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "outDir": "./dist",
    "lib": ["ESNext", "ES2020"],
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "rootDir": "./src/app",
    "rootDirs": [
      "./"
    ]
  },
  "exclude": [
    "node_modules",
    "docs",
    "./dist",
    "./src/test"
  ]
}
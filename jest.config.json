{
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/test/).*\\.spec.ts$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "lines": 100,
      "functions": 100,
      "statements": 100
    }
  },
  "collectCoverageFrom": [
    "!**/test/**"
  ]
}
